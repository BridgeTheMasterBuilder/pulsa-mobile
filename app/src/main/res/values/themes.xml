<resources>
    <!-- Base application theme. -->
    <style name="Theme.Pulsa" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/button_color</item>
        <item name="colorPrimaryVariant">@android:color/darker_gray</item>
        <item name="colorOnPrimary">@color/button_text</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/text</item>
        <item name="colorSecondaryVariant">@color/purple_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.Pulsa.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Pulsa.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Pulsa.PopupOverlay" parent="ThemeOverlay.AppCompat.Dark" />
</resources>